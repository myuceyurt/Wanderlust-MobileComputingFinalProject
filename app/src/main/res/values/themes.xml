<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Project1" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <!--          For Light Mode!         -->
    <style name="Theme.Project1" parent="Base.Theme.Project1" />
    <style name="ScreenBackground"><item name="android:background">@color/white</item></style>
    <style name="DetailsScreenBackground"><item name="android:background">@color/detailsBG</item></style>
    <style name="LoginScreenBackground"><item name="android:background">@color/loginBG</item></style>
    <style name="TextColor"><item name="android:textColor">@color/darkGrey</item></style>
    <style name="HintTextColor"><item name="android:textColorHint">@color/black</item></style>
    <style name="LoginHeaderColor"><item name="android:textColor">@color/lavender</item></style>
    <style name="ImageChange"><item name="android:src">@drawable/login_image_light</item></style>
    <style name="LoginStyle"><item name="android:textColorHint">@color/black</item><item name="android:backgroundTint">@color/darkGrey</item></style>
    <style name="RegisterStyle"><item name="android:textColorHint">@color/black</item><item name="android:background">@color/grey</item></style>

    <style name="LeftArrow"><item name="android:src">@drawable/arrow_back_lightmode</item></style>
    <style name="RightArrow"><item name="android:src">@drawable/arrow_forward_lightmode</item></style>
    <style name="EmergencyNumber"><item name="android:src">@drawable/emergency_icon_lightmode</item></style>
    <style name="Location"><item name="android:src">@drawable/location_lightmode</item></style>
    <style name="SearchIcon"><item name="android:src">@drawable/search_vector_asset_lightmode</item></style>


</resources>